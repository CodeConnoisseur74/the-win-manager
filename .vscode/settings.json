{
    "workbench.iconTheme": "hotline-wired-alt",
    "terminal.integrated.tabs.defaultColor": "terminal.ansiBlue",
    "terminal.integrated.automationProfile.linux": null,
    "terminal.integrated.fontFamily": "ComicShannsMono Nerd Font Mono",
    "terminal.integrated.fontSize": 16,
    "workbench.colorCustomizations": {
        "terminal.foreground": "#00ffff",
        "terminalCursor.foreground": "#ffa2f0",
        "minimap.background": "#00000000",
        "scrollbar.shadow": "#00000000"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "ruff.lint.args": [
        "--config=~/django-react-tasks-manager/pyproject.toml",
    ],
    "flake8.args": [
        "--max-line-length=119",
        "--ignore=E402,F841,F401,E302,E305"
    ],
    "files.autoSave": "afterDelay",
    "editor.fontSize": 16,
    "editor.fontFamily": "ComicShannsMono Nerd Font Mono",
    "editor.wordWrap": "on",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.rulers": [
        119
    ],
    "[python]": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "always",
            "source.organizeImports": "explicit"
        }
    },
    "ruff.lineLength": 119,
    "editor.guides.bracketPairs": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "html": "html"
    },
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "workbench.editor.enablePreviewFromCodeNavigation": true,
    "powermode.enabled": true,
    "powermode.combo.location": "off",
    "powermode.combo.counterEnabled": "hide",
    "powermode.combo.timerEnabled": "hide",
    "powermode.shake.intensity": 0,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "javascript.format.semicolons": "insert",
    "editor.fontLigatures": true,
    "editor.fontVariations": true,
    "editor.fontWeight": "bold",
    "editor.mouseWheelZoom": true,
    "window.zoomLevel": 1,
    "chat.editor.fontSize": 16,
    "markdown.preview.fontSize": 16,
    "editor.tokenColorCustomizations": {
        "[August - Radical 2]": {}
    },
    "ruff.configuration": "/workspace/django-react-tasks-manager/pyproject.toml",
    "[toml]": {
        "editor.defaultFormatter": "tamasfe.even-better-toml"
    },
    "terminal.integrated.fontWeight": "bold",
    "workbench.colorTheme": "Sauna Dark",
    "emmet.showSuggestionsAsSnippets": true,
    "editor.snippetSuggestions": "top",
    "editor.suggest.showSnippets": true,
    "workbench.editor.revealIfOpen": true,
    "eslint.format.enable": false,
    "standard.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "html",
            "autoFix": true
        }
    ],
    "terminal.integrated.ignoreBracketedPasteMode": true,
    "editor.guides.bracketPairsHorizontal": true,
    "editor.linkedEditing": true,
    "codium.codeCompletion.enable": true,
}